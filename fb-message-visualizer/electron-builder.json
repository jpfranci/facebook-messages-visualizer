{
  "productName": "ChatTrace",
  "directories": {
    "output": "release/"
  },
  "pkg": {
    "allowAnywhere": true
  },
  "compression": "maximum",
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "dist",
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "pkg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
